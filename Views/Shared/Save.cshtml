@model SampleSite.Models.EmployeeInfo

<h4>社員選択パネル</h4>
<h6>(@ViewBag.target)</h6>

<input type="hidden" id="target_id" name="target_id" value="@ViewBag.target">


@using (Html.BeginForm("Save", "Home", FormMethod.Post, new { role = "form", id = "saveForm" }))
{

    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <div class="container">

        <div class="row">
            <div class="col-10">
                <div class="form-group">
                    @Html.TextBox("EmproyeeSertch", "", new { @class = "form-control form-control-sm selecter" })
                </div>
            </div>
            <div class="col-2">
                <button type="submit" id="submit" class="btn btn-sm btn-success btn-block">検索</button>
            </div>
        </div>        

        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    @Html.TextArea("EmproyeeSelectList", new { @class = "form-control form-control-sm" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <button type="submit" id="submit" class="btn btn-sm btn-success btn-block">選択</button>
            </div>
        </div>

    </div>

}